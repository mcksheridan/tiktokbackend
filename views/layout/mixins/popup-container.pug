mixin popupContainer(pageType)
  .popup
    p.popup_close
      a(href='#', class='popup_close-link')
        span.material-icons close
    p.popup_message
    form.popup_form
      if pageType.list
        button(class='popup_form-confirm form-button') Confirm
        button(class='popup_form-cancel form-button') Cancel
      if pageType.allVideos
        select(name='move_destination', class='form_move-video')
        each list in data.get_lists
          option(value=`${list.list_id}`).form_move-video-option !{list.name}
        button(class='popup_form-confirm form-button') Confirm
    if pageType.list
      include ../../includes/add-video-to-list
      include ../../includes/edit-list
      include ../../includes/sort-list
    if pageType.allVideos
      include ../../includes/add-video
      include ../../includes/add-list
      include ../../includes/sort-video
