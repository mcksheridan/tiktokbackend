extends header
include mixins/pages
include mixins/tiktokContainer

block layout

    .tiktok-popup
      p.tiktok-popup_close
        a(href='#', class='popup_close-link')
          span.material-icons close
      .tiktok-popup_video
      p.tiktok-popup_link

    div.content
      if error
        p.content_info Error getting dynamic content.
      else
        p.content_info Found #[strong !{data.video_count}] videos
          br
          a(href=data.previous_page, class='content_info_link') Back

        +tiktokContainer(data.found_video)

        +pages(data.video_count/data.video_limit)
